{
  // RenderMaid - High-performance Mermaid diagram processing library
  "name": "@srdjan/rendermaid",
  "version": "0.7.0",
  "description": "High-performance, functional TypeScript library for parsing and rendering Mermaid diagrams with optimized performance and multi-format output",
  "license": "MIT",
  // Repository information
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srdjan/rendermaid.git"
  },
  "bugs": {
    "url": "https://github.com/srdjan/rendermaid/issues"
  },
  "homepage": "https://github.com/srdjan/rendermaid",
  // Package metadata for discovery
  "keywords": [
    "mermaid",
    "diagrams",
    "flowchart",
    "parser",
    "renderer",
    "svg",
    "html",
    "json",
    "typescript",
    "functional-programming",
    "ast",
    "visualization",
    "performance",
    "deno",
    "jsr"
  ],
  "author": {
    "name": "Srdjan & Clody",
    "email": "team@rendermaid.dev"
  },
  // Module exports
  "exports": {
    ".": "./mod.ts"
  },
  // Development tasks
  "tasks": {
    "test": "deno test --allow-write --allow-read",
    "test-watch": "deno test --allow-write --allow-read --watch",
    "e2e": "deno run --allow-write --allow-read ./tests/e2e.ts",
    "demo": "deno run --allow-write --allow-read ./examples/basic.ts",
    "perf": "deno run --allow-write --allow-read ./tests/performance.ts",
    "markdown": "deno run --allow-write --allow-read examples/advanced.ts",
    "publish": "deno publish",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts"
  },
  // Dependencies
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "ts-pattern": "npm:ts-pattern@^5.7.1"
  },
  // TypeScript configuration
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  // Code formatting
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": [
      "src/",
      "tests/",
      "examples/",
      "*.ts",
      "*.tsx",
      "*.js",
      "*.jsx"
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "build/"
    ]
  },
  // Linting configuration
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ]
    },
    "include": [
      "src/",
      "tests/",
      "examples/",
      "*.ts",
      "*.tsx"
    ],
    "exclude": [
      "node_modules/",
      "dist/",
      "build/"
    ]
  },
  // Test configuration
  "test": {
    "include": [
      "tests/"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  }
}